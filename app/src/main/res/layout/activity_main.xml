<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="LifeCycle"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/Screen"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="right"
        android:inputType="text"
        android:textSize="50sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/button_CE"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="CE"
            app:layout_constraintEnd_toStartOf="@+id/button_C"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_C"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="C"
            app:layout_constraintEnd_toStartOf="@+id/buttonNgoacDong"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_CE"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonNgoacDong"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text=")"
            app:layout_constraintEnd_toStartOf="@+id/buttonChia"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_C"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonChia"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="/"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonNgoacDong"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="7"
            app:layout_constraintEnd_toStartOf="@+id/button8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_CE" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="8"
            app:layout_constraintEnd_toStartOf="@+id/button9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button_C" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="9"
            app:layout_constraintEnd_toStartOf="@+id/buttonNhan"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/buttonNgoacDong" />

        <Button
            android:id="@+id/buttonNhan"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:layout_marginStart="3dp"
            android:text="X"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintTop_toBottomOf="@+id/buttonChia" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="4"
            app:layout_constraintEnd_toStartOf="@+id/button5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="5"
            app:layout_constraintEnd_toStartOf="@+id/button6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="6"
            app:layout_constraintEnd_toStartOf="@+id/buttonTru"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

        <Button
            android:id="@+id/buttonTru"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="-"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/buttonNhan" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="1"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="2"
            android:textColorLink="#E0D9D9"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="3"
            app:layout_constraintEnd_toStartOf="@+id/buttonCong"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

        <Button
            android:id="@+id/buttonCong"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="+"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/buttonTru" />

        <Button
            android:id="@+id/buttonNgoacMo"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="("
            app:layout_constraintEnd_toStartOf="@+id/button0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="0"
            app:layout_constraintEnd_toStartOf="@+id/buttonDot"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonNgoacMo"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="."
            app:layout_constraintEnd_toStartOf="@+id/buttonBang"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button0"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/buttonBang"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button"
            android:text="="
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonDot"
            app:layout_constraintTop_toBottomOf="@+id/buttonCong" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>